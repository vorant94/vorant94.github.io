---

export interface Props {
	src: string;
	srcDark: string;
	autoplay?: boolean;
}

const { src, srcDark, autoplay = true } = Astro.props;
---

<lottie-player
	class="dark:hidden"
	src={src}
	autoplay={autoplay}
/>
<lottie-player
	class="hidden dark:flex"
	src={srcDark}
	autoplay={autoplay}
/>

<script>
import '@lottiefiles/lottie-player';
</script>
