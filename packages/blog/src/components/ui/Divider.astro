---
export interface Props {
	isLeft?: boolean;
	isRight?: boolean;
}

const { isLeft = true, isRight = true } = Astro.props;
---
<div class="relative flex items-center py-5">
	{isLeft && (
		<div class="flex-grow border-slate-300 border-t dark:border-slate-600" />
	)}

	<div class:list={["flex-shrink", {
			"ml-4": isLeft,
			"mr-4": isRight,
		}]}>
		<slot/>
	</div>

	{isRight && (
		<div class="flex-grow border-slate-300 border-t dark:border-slate-600" />
	)}
</div>
